extends ../layout

block content
    .container
        h1 Choose username( mainly for chat )
        div(class="row")
            div(class="col-xs-12")
                form(class="form-signin", method="post")
                    input(type="text", class="form-control", placeholder="Username", name="data[chatUsername]", autofocus, required)
                    br
                    button(class="btn btn-lg btn-primary btn-block", type="submit") Join